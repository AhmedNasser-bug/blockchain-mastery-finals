---
/**
 * MCQQuestion Component
 * Renders single-choice question options.
 */
export interface Props {
    options: string[];
    questionIndex: number;
}

const { options, questionIndex } = Astro.props;
import { formatText } from '../../utils';
const LETTERS = ['A', 'B', 'C', 'D', 'E', 'F'];
---

<div class="options-grid" data-question-index={questionIndex}>
    {options.map((opt, idx) => (
        <div class="option" data-idx={idx}>
            <span class="option-marker">{LETTERS[idx]}</span>
            <span class="option-text">{formatText(opt)}</span>
        </div>
    ))}
</div>
