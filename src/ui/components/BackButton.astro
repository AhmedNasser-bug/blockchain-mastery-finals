---
import '../../styles/components/back-button.css';
interface Props {
  label?: string;
  onClick?: string; // Optional custom handler, defaults to game.goHome()
}
const { label = "EXIT TO MENU", onClick = "window.game.goHome()" } = Astro.props;
---
<button class="back-btn" onclick={onClick}>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
    </svg>
    {label}
</button>
